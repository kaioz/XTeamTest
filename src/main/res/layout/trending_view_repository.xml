<?xml version="1.0" encoding="utf-8"?>
<com.cocosw.xteam.ui.EmotionItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:padding="16dp"
    android:gravity="center"
    android:orientation="vertical"
    >
  <TextView
      android:id="@+id/trending_repository_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      android:singleLine="true"
      android:textColor="?android:attr/textColorPrimary"
      style="@style/TextAppearance.AppCompat.Display1"
      />
  <TextView
      android:id="@+id/trending_repository_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="?android:attr/textColorPrimary"
      android:textSize="14sp"
      android:maxLines="3"
      android:ellipsize="end"
      android:padding="8dp"
      tools:text="square â€” A sample Android app which showcases advanced usage of Dagger among other open source libraries."
      />
</com.cocosw.xteam.ui.EmotionItemView>
